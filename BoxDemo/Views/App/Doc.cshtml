
@{
    ViewBag.Title = "Doc";
}

@{Box.V2.Models.BoxFile file = ViewBag.BoxFile;}


<div aria-hidden='true' aria-labelledby='myModalLabel' class='modal fade' id='viewModal' role='dialog' tabindex='-1'>
    <div class='modal-dialog'>
        <div class='modal-body' style='overflow: hidden;'>
            <iframe allowfullscreen='allowfullscreen' frameBorder='0' height='100%' id='preview' width='100%'></iframe>
        </div>
        <div class='modal-footer'>
            <button class='btn btn-default btn-small' data-dismiss='modal' type='button' onclick="$('#preview').attr('src','about:blank');">
                Close
            </button>
        </div>
    </div>
</div>

<div class="row" style="margin-top: 30px;">
    <div class="col-md-1">
        <img src="/App/Thumbnail/@file.Id" width="64"/>
    </div>
    <div class="col-md-11">
        <div class="row">
            <div class="col-md-2">
                File Name:
            </div>
            <div class="col-md-10">
                @file.Name
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                Created At:
            </div>
            <div class="col-md-10">
                @file.CreatedAt
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                Size:
            </div>
            <div class="col-md-10">
                @{var size = file.Size / 1024;}
                @size KB
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                
            </div>
            <div class="col-md-10">
                @Html.ActionLink("Download", "Download", "App", new { id = file.Id }, null)
            </div>
        </div>
        <div class='row'>
            <div class='col-md-2'></div>
            <div class='col-md-10'>
                <a href='#' onclick="$('#preview').attr('src','about:blank'); setTimeout(function(){$('#preview').attr('src','/App/Preview/@file.Id'); $('#viewModal').modal(open);},10);">
                    Preview
                </a>
            </div>
        </div>
    </div>
</div>


